{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<h1>Mon Panier</h1>

{% if cart is empty %}
    <p>Votre panier est vide.</p>
{% else %}
    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for id, line in cart %}
            <tr>
                <td>{{ line.product.name }}</td>
                <td>
                    <form action="{{ path('cart_update', {'id': line.product.id}) }}" method="post">
                        <input type="number" name="quantity" value="{{ line.quantity }}" min="1" style="width: 60px;">
                        <button type="submit">Mettre à jour</button>
                    </form>
                </td>
                <td>{{ line.product.price|number_format(2, '.', ' ') }} €</td>
                <td>{{ (line.product.price * line.quantity)|number_format(2, '.', ' ') }} €</td>
                <td>
                    <a href="{{ path('cart_remove', {'id': line.product.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p><strong>Total produits :</strong> {{ total|number_format(2, '.', ' ') }} €</p>
    <p><strong>Frais de port :</strong> {{ transport|number_format(2, '.', ' ') }} €</p>
    <p><strong>Total général :</strong> {{ grand_total|number_format(2, '.', ' ') }} €</p>
    <a href="{{ path('app_login') }}">Passer commande</a>
{% endif %}
{% endblock %}
