{% extends 'base.html.twig' %}

{% block title %}Cr√©er un compte{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-10 bg-white shadow-md rounded-lg p-8">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Cr√©er un compte</h1>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="mb-4 text-sm text-red-600 bg-red-100 p-3 rounded">
            {{ flash_error }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div class="space-y-4">
            {{ form_row(registrationForm.firstName, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.lastName, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.phone, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.email, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.plainPassword.first, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.plainPassword.second, {
                label_attr: {'class': 'block text-sm font-medium text-gray-700'},
                attr: {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-black'}
            }) }}

            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button type="submit"
                class="w-full mt-6 bg-black text-white py-2 rounded-lg hover:bg-gray-900 transition">
            S'inscrire
        </button>
    {{ form_end(registrationForm) }}

    <p class="text-sm text-center text-gray-600 mt-6">
        üë§ D√©j√† inscrit ?
        <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Connectez-vous ici</a>
    </p>
</div>
{% endblock %}
