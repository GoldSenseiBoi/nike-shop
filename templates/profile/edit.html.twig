{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-2xl p-8 mt-8">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">ðŸ‘¤ Modifier mon profil</h1>

    {{ form_start(form) }}

    <div class="space-y-6">
        {% for field in form %}
            {% if field.vars.name != '_token' %}
                <div>
                    {{ form_label(field, null, {
                        'label_attr': {
                            'class': 'block text-sm font-medium text-gray-700'
                        }
                    }) }}
                    {{ form_widget(field, {
                        'attr': {
                            'class': 'mt-1 w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-black'
                        }
                    }) }}
                    {{ form_errors(field) }}
                </div>
            {% else %}
                {{ form_row(field) }}
            {% endif %}
        {% endfor %}
    </div>

    <div class="mt-8 text-center">
        <button type="submit" class="bg-black text-white px-6 py-2 rounded-full hover:bg-gray-900 transition">
            ðŸ’¾ Enregistrer les modifications
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
